<Window x:Class="WinClockIn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinClockIn"
        mc:Ignorable="d"
        Title="Win - Clock - In" Height="232" Width="368" WindowStyle="ToolWindow">
    <Grid>
        <Button x:Name="Btn_Start" Content="Start" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,133,0,0" Height="21" Width="83"/>
        <Label Content="State:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Clocked:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <Label Content="TTL:" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Btn_Stop" Content="Stop" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,169,0,0" Height="21" Width="83"/>
        <Label x:Name="Label_State" Content="{}{state}" HorizontalAlignment="Left" Margin="54,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Label_Clocked" Content="{}{clocked}" HorizontalAlignment="Left" Margin="70,41,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Label_TTL" Content="{}{ttl}" HorizontalAlignment="Left" Margin="46,72,0,0" VerticalAlignment="Top"/>
        <GroupBox Header="Daily Activity" Margin="140,0,0,0" Height="196" VerticalAlignment="Center" HorizontalAlignment="Left" Width="218">
            <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}"/>
        </GroupBox>
    </Grid>
</Window>
